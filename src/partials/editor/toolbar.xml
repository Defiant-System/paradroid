
<ToolBar>
	<ToolSet id="background" state="active">
		<Group>
			<Select name="Background" menu="editor-layer"></Select>
			<Divider />
			<Options type="grouped">
				<Tool name="8px" click="grid-size" arg=".25"/>
				<Tool name="32px" click="grid-size" arg="1"/>
			</Options>
			<Options type="grouped">
				<Tool name="Eraser" click="cursor-eraser"/>
				<Tool name="Overflow" click="toggle-overflow"/>
				<Tool name="Grid" click="toggle-grid"/>
			</Options>
		</Group>
	</ToolSet>

	<ToolSet id="collision">
		<Group>
			<Select name="Background" menu="editor-layer"></Select>
			<Divider />
			<Options type="grouped">
				<Tool name="Overflow" click="toggle-overflow"/>
				<Tool name="PGN" click="output-collision-pgn"/>
			</Options>
			<Tool name="Duplicate" click="col-duplicate-active"/>
			<Tool name="Delete" click="col-delete-active"/>
		</Group>
	</ToolSet>

	<ToolSet id="action">
		<Group>
			<Select name="Background" menu="editor-layer"></Select>
			<Divider />
			<Options type="grouped">
				<Tool name="Overflow" click="toggle-overflow"/>
				<Tool name="PGN" click="output-action-pgn"/>
			</Options>
		</Group>
	</ToolSet>

	<ToolSet id="los">
		<Group>
			<Select name="Background" menu="editor-layer"></Select>
			<Divider />
			<Options>
				<Tool name="Add" click="los-add-segment"/>
				<Tool name="Delete" click="los-delete-segment"/>
			</Options>
			<Options type="grouped">
				<Tool name="Overflow" click="toggle-overflow"/>
				<Tool name="PGN" click="output-los-pgn"/>
			</Options>
		</Group>
	</ToolSet>

	<ToolSet id="lights">
		<Group>
			<Select name="Background" menu="editor-layer"></Select>
			<Divider />
			<Tool name="Duplicate" click="lights-duplicate"/>
			<Tool name="Delete" click="lights-delete"/>
			<Options type="grouped">
				<Tool name="Helpers" click="toggle-lights-helpers"/>
				<Tool name="Overflow" click="toggle-overflow"/>
				<Tool name="PGN" click="output-lights-pgn"/>
			</Options>
		</Group>
	</ToolSet>

	<ToolSet id="droids">
		<Group>
			<Select name="Droids" menu="editor-layer"></Select>
			<Divider />
			<Tool name="Delete" click="delete-patrol-point"/>
			<Options type="grouped">
				<Tool name="Overflow" click="toggle-overflow"/>
				<Tool name="PGN" click="output-patrol-pgn"/>
			</Options>
		</Group>
	</ToolSet>
</ToolBar>
